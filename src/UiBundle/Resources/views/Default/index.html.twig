{% extends '@Ui/Layout/default.html.twig' %}

{% block main_content %}
    {% for i, specification in specifications %}
        <div class="row">
            <div class="col-md-12">
                <div class="box box-default collapsed-box">
                    <div class="box-header with-border">
                        <h3 class="box-title">{{ specification.title }} {{ specification.version }}</h3>

                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i
                                        class="fa fa-plus"></i>
                            </button>
                        </div>
                        <!-- /.box-tools -->
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">

                        <div class="row">
                            {% for resourceName, resourceOperations in resources[i] %}
                            <div class="col-md-6">
                                <div class="box box-widget widget-user-2">
                                    <!-- Add the bg color to the header using any of the bg-* classes -->
                                    <div class="widget-user-header bg-info">
                                        <div class="widget-user-image">
                                            <img class="img-circle" src="" data-src="holder.js/65x65" alt="{{ resourceName }}">
                                        </div>
                                        <!-- /.widget-user-image -->
                                        <h3 class="widget-user-username">{{ resourceName }}</h3>
                                        <h5 class="widget-user-desc">Operations : {{ resourceOperations|length }} | Definitions : {{ specification.definitions|length }} | Tests : 351</h5>
                                    </div>
                                    <div class="box-footer no-padding">
                                        <ul class="nav nav-stacked">
                                            {% for resourceOperation  in resourceOperations %}
                                                <li>
                                                    <a href="#">
                                                        {{ resourceOperation.description }}
                                                        {% if resourceOperation.method == 'get' %}
                                                            <span class="label label-info pull-right">{{ resourceOperation.method }}</span>
                                                        {% endif %}
                                                        {% if resourceOperation.method == 'post' %}
                                                            <span class="label label-success pull-right">{{ resourceOperation.method }}</span>
                                                        {% endif %}
                                                        {% if resourceOperation.method == 'put' %}
                                                            <span class="label label-warning pull-right">{{ resourceOperation.method }}</span>
                                                        {% endif %}
                                                        {% if resourceOperation.method == 'delete' %}
                                                            <span class="label label-danger pull-right">{{ resourceOperation.method }}</span>
                                                        {% endif %}
                                                    </a>
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    </div>
                                </div>
                                <!-- /.widget-user -->
                            </div>
                            {% endfor %}

                        </div>

                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
    {% endfor %}
{% endblock %}
